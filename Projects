#Basic Calculator in Python

#Function to add two basic numbers together
def add(x, y):
  return x + y

#Function to subtract two basic numbers
def subtract(x, y):
  return x - y

#Function to multiply two basic numbers
def multiply(x, y):
  return x * y

#Function to divide two basic numbers
def divide(x, y):
    #Check if the divisor is not zero to avoid division by zero error
  if y != 0:
    return x / y
  else:
    return "Cannot divide by zero"

#Main Program
while True:
  #User Input
  print("Select an operation:")
  print("1. Add")
  print("2. Subtract")
  print("3. Multiply")
  print("4. Divide")
  print("5. Exit")

choice = input("Enter choice (1, 2, 3, 4, 5): ")
# Check if the choice is to exit
if choice == '5':
    print("Calculator closed.") 
    break
  
# Check if the choice is valid
if choice in ('1', '2', '3', '4'):
    # Get user input for numbers
    num1 = float(input("Enter first number: "))
    num2 = float(input("Enter second number: "))
    # Perform the selected operation
    if choice == '1':
        result = add(num1, num2)
        print("Result: {} + {} = {}".format(num1, num2, result))
    elif choice == '2':
        result = subtract(num1, num2)
        print("Result: {} - {} = {}".format(num1, num2, result))
    elif choice == '3':
        result = multiply(num1, num2)
        print("Result: {} * {} = {}".format(num1, num2, result))
    elif choice == '4':
        result = divide(num1, num2)
        print("Result: {} / {} = {}".format(num1, num2, result))
else:
    print("Invalid input. Please enter a valid choice.")
